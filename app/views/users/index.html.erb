<h1>Usuários</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Tipo</th>
      <th>Ações</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.email %></td>
        <td><%= user.role %></td>
        <td>
          <%= link_to "Editar", edit_user_path(user) %> |
          <%= button_to "Excluir", user, method: :delete, data: { confirm: "Tem certeza?" } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Novo Usuário", new_user_path %>
