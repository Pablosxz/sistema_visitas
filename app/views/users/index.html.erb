<% content_for :title, "Usuários" %>

<div class="container mt-4">
  <h1 class="text-center mb-4">Usuários</h1>

  <!-- Filtro por tipo de usuário -->
  <div class="d-flex justify-content-center flex-wrap gap-2 mb-3">
    <%= link_to "Todos", users_path(role: nil), class: "btn #{params[:role].blank? ? 'btn-primary' : 'btn-outline-primary'}" %>
    <%= link_to "Administradores", users_path(role: 'admin'), class: "btn #{params[:role] == 'admin' ? 'btn-primary' : 'btn-outline-primary'}" %>
    <%= link_to "Atendentes", users_path(role: 'attendant'), class: "btn #{params[:role] == 'attendant' ? 'btn-primary' : 'btn-outline-primary'}" %>
    <%= link_to "Funcionários", users_path(role: 'employee'), class: "btn #{params[:role] == 'employee' ? 'btn-primary' : 'btn-outline-primary'}" %>
  </div>

  <!-- Tabela de Usuários -->
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead class="table-dark text-center">
        <tr>
          <th>Email</th>
          <th>Papel</th>
          <th style="width: 220px;">Ações</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.email %></td>
            <td><%= user.role.humanize %></td>
            <td class="text-center">
              <div class="btn-group" role="group">
                <%= link_to "Editar", edit_user_path(user), class: "btn btn-warning btn-sm" %>
                
                <% if user.role == 'employee' %>
                  <button class="btn btn-danger btn-sm ms-1" disabled title="Funcionários não podem ser excluídos">
                    Excluir
                  </button>
                <% else %>
                  <%= button_to "Excluir", user_path(user), method: :delete, 
                        data: { confirm: "Tem certeza?" }, 
                        class: "btn btn-danger btn-sm ms-1" %>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="text-center mt-3">
    <%= link_to "Novo Usuário", new_user_path, class: "btn btn-success" %>
  </div>
</div>
