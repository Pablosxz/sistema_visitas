<% content_for :title, @sector.name %>

<div class="container mt-4">
  <h1 class="mb-4 text-center"><%= @sector.name %></h1>

  <div class="card shadow-sm">
    <div class="card-body">
      <h5 class="card-title"><%= @sector.name %></h5>
      <p class="card-text">
        <strong>Status:</strong> <span class="<%= @sector.active? ? 'text-success' : 'text-danger' %>">
          <%= @sector.active? ? "Ativo" : "Inativo" %>
        </span>
      </p>
    </div>
  </div>

  <!-- Botões de ação -->
  <div class="d-flex justify-content-center gap-3 mt-4">
    <%= link_to "Editar", edit_sector_path(@sector), class: "btn btn-warning" %>

    <% if @sector.active? %>
      <%= button_to "Desativar", deactivate_sector_path(@sector), method: :patch, class: "btn btn-danger", data: { confirm: "Tem certeza?" } %>
    <% else %>
      <%= button_to "Ativar", activate_sector_path(@sector), method: :patch, class: "btn btn-success", data: { confirm: "Tem certeza?" } %>
    <% end %>

    <%= link_to "Voltar", sectors_path, class: "btn btn-secondary" %>
  </div>
</div>
