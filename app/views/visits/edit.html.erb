<% content_for :title, "Editar Visita" %>

<div class="container mt-4">
  <div class="card shadow-lg p-4">
    <h2 class="text-center mb-4 text-primary">Editar Visita</h2>

    <%= render "form", visit: @visit %>

    <div class="mt-3 d-flex justify-content-between">
      <%= link_to "Ver Visita", @visit, class: "btn btn-info" %>
      <%= link_to "Voltar", visits_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
