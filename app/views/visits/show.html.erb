<% content_for :title, "Detalhes da Visita" %>

<div class="container mt-4">

  <div class="card visit-details-card shadow-lg p-4">
    <h2 class="text-center mb-4"><i class="bi bi-eye"></i> Detalhes da Visita</h2>

    <%= render @visit %>

    <div class="mt-4 d-flex justify-content-between">
      <% if can? :update, Visit %>
        <%= link_to edit_visit_path(@visit), class: "btn btn-warning" do %>
          <i class="bi bi-pencil-square"></i> Editar Visita
        <% end %>
      <% end %>

      <%= link_to visits_path, class: "btn btn-secondary" do %>
        <i class="bi bi-arrow-left"></i> Voltar
      <% end %>
      
      <% if can? :destroy, Visit %>
        <%= button_to @visit, method: :delete, class: "btn btn-danger",
            data: { confirm: "Tem certeza que deseja excluir esta visita?" } do %>
          <i class="bi bi-trash"></i> Excluir Visita
        <% end %>
      <% end %>
    </div>
  </div>
</div>
